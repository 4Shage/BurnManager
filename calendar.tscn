	var ch1 := create_item(root)
	var ch2 := create_item(root)
	var ch3 := create_item(root)
	var ch4 := create_item(root)
	var ch : Array = [ch0,ch1,ch2,ch3,ch4]
	for e in 7:
		root.set_text(e,weekdays[e])
	for e in month:
		var d :int = 0
		var de : int = e[\"dz\"]
		if e > 7:
			d = 1
		elif e > 14:
			d = 2
		elif e > 21:
			d = 3
		match de:
			1:
