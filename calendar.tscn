func _init():
	if month == {}:
		var curDay : int= Manager.date[\"day\"]
		var curWeekDay : int = Manager.date[\"weekday\"]
		for e in Manager.monthDays+1:
			if e != 0:
				month[e] = 0
		for e in month:
